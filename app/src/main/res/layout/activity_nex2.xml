<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mtk"
    tools:context=".nex2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:background="@color/abu2"
        android:text="Volume Kerucut"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/l1"
        app:layout_constraintTop_toTopOf="@+id/l1"
        tools:layout_editor_absoluteX="110dp" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />

        <ImageButton
            android:id="@+id/cek3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/paly" />


    </LinearLayout>


    <EditText
        android:id="@+id/nilair"
        android:background="@color/putih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan nila R"
        android:inputType="numberDecimal"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/l1"
        tools:layout_editor_absoluteX="-16dp"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/nilait"
        android:background="@color/putih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan nilai T"
        android:inputType="numberDecimal"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/nilair"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/hasilnex2"
        android:background="@color/putih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@+id/nilait"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>