<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mtk"
    tools:context=".fpbkpk">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/abu2"
        android:text="Volume Kerucut"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/l1"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backkpk"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />

        <ImageButton
            android:id="@+id/cekkpk"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/paly" />


    </LinearLayout>

    <EditText
        android:id="@+id/nilaikpk1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/putih"
        android:hint="Masukan angka"
        android:inputType="numberDecimal"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/nilaikpk"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/nilaikpk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/putih"
        android:hint="Masukan angka"
        android:inputType="numberDecimal"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="36dp" />

    <TextView
        android:id="@+id/textViewfpb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil FPB"
        app:layout_constraintTop_toBottomOf="@+id/hasilkpk"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textViewkpk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil KPK"
        app:layout_constraintTop_toBottomOf="@+id/nilaikpk1"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/hasilkpk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/putih"
        android:textSize="35dp"

        app:layout_constraintTop_toBottomOf="@+id/textViewkpk"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/hasilfpb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/putih"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewfpb"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>